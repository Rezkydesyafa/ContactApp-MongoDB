<h3 class="mt-3">
    Daftar Contacts
</h3>


<table class="table table-hover mt-4 ">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor</th>
            <th scope="col">Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% if (contact.length===0) { %>
            <div class="alert alert-danger" role="alert">
                data kontak masih kosong !!
            </div>
            <% } %>
                <% contact.forEach((c,i)=> {i++ %>
                    <th scope="row">
                        <%= i++ %>
                    </th>
                    <td>
                        <%=c.nama%>
                    </td>
                    <td>
                        <%=c.nohp%>
                    </td>
                    <td>
                        <a href="/contact/<%=c.nama %>" class="btn btn-success badge rounded-pill btn-lg"><i
                                class="bi bi-info-circle"></i>
                            details</a>
                    </td>
                    </tr>
                    <% }) %>
                        <tr>

    </tbody>
</table>
<div class="d-grid gap-2 d-md-flex justify-content-md-end mt-2 mb-5 shadow-lg">
    <a href="/contact/add" class="btn btn-outline-success  ">Add contact</a>
</div>