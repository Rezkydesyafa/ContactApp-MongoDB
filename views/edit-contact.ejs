<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Edit contacts</h2>
            <% if (typeof errors !='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(e=> { %>
                            <li>
                                <%= e.msg%>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>
                    <form method="post" action="/contact?_method=PUT">
                        <div class="mb-3">
                            <input type="hidden" name="_id" value="<%= contacts._id %>" />
                            <input type="hidden" name="oldnama" value="<%= contacts.oldnama ||contacts.nama %>">
                            <label for="nama" class="form-label">Nama</label>
                            <input type="text" class="form-control" id="nama" name="nama" required
                                value="<%=contacts.nama%>">
                        </div>
                        <div class="mb-3">
                            <label for="nohp" class="form-label">Nomor handphone</label>
                            <input type="text" class="form-control" id="nohp" name="nohp" required
                                value="<%=contacts.nohp%>">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required
                                value="<%=contacts.email%>">
                        </div>
                        <div class="form-floating">
                            <label for="alamat">Alamat</label>
                            <textarea placeholder="<%=contacts.alamat%>" class="form-control" id="alamat" name="alamat"
                                style="height: 80px" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-success mt-4">Submit</button>
                    </form>
        </div>
    </div>
</div>